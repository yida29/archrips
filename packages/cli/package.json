{
  "name": "archrip",
  "version": "0.2.8",
  "description": "Generate interactive architecture diagrams from your codebase using AI agents",
  "type": "module",
  "bin": {
    "archrip": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && npm run copy-templates",
    "copy-templates": "cp -r src/templates dist/ && cp -r src/schema dist/ && node scripts/copy-viewer.js",
    "typecheck": "tsc --noEmit",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "architecture",
    "diagram",
    "code-analysis",
    "react-flow",
    "cli",
    "ai"
  ],
  "author": "Yuto Ida",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yida29/archrip"
  },
  "dependencies": {
    "@dagrejs/dagre": "^1.1.4"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "5.8.3",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=20"
  }
}
